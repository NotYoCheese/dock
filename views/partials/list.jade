.container-fluid
  .row
    .col-xs-1
    .col-xs-10
      .jumbotron
        h1.text-center Boater Directory
        fieldset
            .form-group
              label.col-xs-2.control-label search:
              .col-xs-10
                input.form-control(ng-model='query', placeholder='Search for artists', autofocus='autofocus')
            .form-group
              label.col-xs-2 by:
              .col-xs-3
                select(ng-model='artistOrder')
                  option(value='name') Name
                  option(value='reknown') Reknown
            .form-group
              .col-xs-3
                .radio-inline
                  label
                    input(type='radio', ng-model='direction', name='direction', checked='checked')
                    | ascending
              .col-xs-4
                .radio-inline
                  label
                    input(type='radio', ng-model='direction', name='direction', value='reverse')
                    | descending
  .row
    .col-xs-3
    .col-xs-6
      .list-group
        a.list-group-item(href='#/details/{{artists.indexOf(item)}}', ng-animate='\'animate\'', ng-repeat='item in artists | filter: query | orderBy: artistOrder:direction')
          .row
            .col-xs-4
              img.img-responsive.img-rounded(ng-src='images/{{item.shortname}}_tn.jpg', alt='Photo of {{item.name}}')
            .col-xs-8
              h4.list-grou-item-heading {{item.name}}
              p.list-grou-item-text {{item.reknown}}
